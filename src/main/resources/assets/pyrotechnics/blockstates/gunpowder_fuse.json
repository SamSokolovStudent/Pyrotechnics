{
  "multipart": [
    {
      "apply": {
        "model": "pyrotechnics:block/gunpowder_fuse_dot"
      },
      "when": {
        "OR": [
          {
            "east": "none",
            "north": "none",
            "south": "none",
            "west": "none"
          },
          {
            "east": "side|up",
            "north": "side|up"
          },
          {
            "east": "side|up",
            "south": "side|up"
          },
          {
            "south": "side|up",
            "west": "side|up"
          },
          {
            "north": "side|up",
            "west": "side|up"
          }
        ]
      }
    },
    {
      "apply": {
        "model": "pyrotechnics:block/gunpowder_fuse_side0"
      },
      "when": {
        "north": "side|up"
      }
    },
    {
      "apply": {
        "model": "pyrotechnics:block/gunpowder_fuse_side_alt0"
      },
      "when": {
        "south": "side|up"
      }
    },
    {
      "apply": {
        "model": "pyrotechnics:block/gunpowder_fuse_side_alt1",
        "y": 270
      },
      "when": {
        "east": "side|up"
      }
    },
    {
      "apply": {
        "model": "pyrotechnics:block/gunpowder_fuse_side1",
        "y": 270
      },
      "when": {
        "west": "side|up"
      }
    },
    {
      "apply": {
        "model": "pyrotechnics:block/gunpowder_fuse_up"
      },
      "when": {
        "north": "up"
      }
    },
    {
      "apply": {
        "model": "pyrotechnics:block/gunpowder_fuse_up",
        "y": 90
      },
      "when": {
        "east": "up"
      }
    },
    {
      "apply": {
        "model": "pyrotechnics:block/gunpowder_fuse_up",
        "y": 180
      },
      "when": {
        "south": "up"
      }
    },
    {
      "apply": {
        "model": "pyrotechnics:block/gunpowder_fuse_up",
        "y": 270
      },
      "when": {
        "west": "up"
      }
    }
  ]
}