{
  "schemaVersion": 1,
  "id": "pyrotechnics",
  "version": "${version}",

  "name": "Pyrotechnics",
  "description": "A mod that adds revamped fireworks and other explosive items to Minecraft.",
  "authors": [
    "Soko"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "MIT License",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.soko.pyrotechnics.PyroTechnics"
    ],
    "client": [
      "net.soko.pyrotechnics.PyroTechnicsModClient"
    ]
  },
  "mixins": [
    "pyrotechnics.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.11",
    "fabric-api": "*",
    "minecraft": "~1.19.3",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
